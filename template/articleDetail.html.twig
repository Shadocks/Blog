{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container">
        <h3>{{ article.title }}</h3>
        <p>{{ article.intro }}</p>
        <p>{{ article.content }}</p>
        <p>Rédigé par <strong>{{ article.author }}</strong></p>
        <p>Date de publication : <strong>{{ article.dating }}</strong></p>
        {% if article.dateUpdate %}
            <p>Cet article a été modifié le <strong>{{ article.dateUpdate}}</strong></p>
        {% endif %}
        <div>
            <a href="/article/update/{{ article.id }}" class="btn btn-primary">Modifier l'article</a>
            <a href="/article/delete/{{ article.id }}" class="btn btn-primary">Supprimmer l'article</a>
            <a href="/" class="btn btn-primary">Acceuil</a>
        </div>
    </div>
{% endblock %}
